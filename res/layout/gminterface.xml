<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff0f0f0" >
    <TextView
        android:id="@+id/usernameview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户"
        android:textColor="#9b59b6"
        android:textSize="16sp" />
  

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dp"
        android:orientation="vertical"
        android:paddingBottom="20.0dp" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30.0dp" >

            <ImageView
                android:layout_width="146dp"
                android:layout_height="146dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/talk" />

        </FrameLayout>
    </LinearLayout>

<RelativeLayout
    android:id="@+id/commontext"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10.0dp" >

        <TextView
            android:id="@+id/commontext1"
            android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="4dp"
       		android:layout_marginTop="4.0dp"
       		android:textSize="18sp"
            />
        <TextView
            android:id="@+id/commontext2"
            android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/commontext1"
			android:layout_marginBottom="4dp"
       		android:layout_marginTop="4.0dp"
       		android:textSize="18sp"
            />  
         <TextView
            android:id="@+id/commontext3"
            android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/commontext2"
			android:layout_marginBottom="4dp"
       		android:layout_marginTop="4.0dp"
       		android:textSize="18sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/function"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commontext"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5.0dp"
        android:layout_weight="1" >

        <RelativeLayout
            android:id="@+id/Rbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp" >

            <Button
                android:id="@+id/create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/join" />

            <TextView
                android:id="@+id/createtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/create"
                android:layout_centerHorizontal="true"
                android:text="创建群聊"
                android:textColor="#9c4242"
                android:textSize="16sp" />
		</RelativeLayout>
       <RelativeLayout
            android:id="@+id/Rco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" >
		<Button
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/cloudnote" />

        <TextView
            android:id="@+id/notetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/note"
            android:layout_marginRight="17dp"
            android:text="云笔记"
            android:textColor="#9c4242"
            android:textSize="16sp" />
 </RelativeLayout>

       <RelativeLayout
           android:id="@+id/Rmx"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true" >

           <Button
               android:id="@+id/join"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/in" />

           <TextView
               android:id="@+id/jointext"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/join"
               android:layout_centerHorizontal="true"
               android:text="加入群聊"
               android:textColor="#9c4242"
               android:textSize="16sp" />
       </RelativeLayout>

    	 </RelativeLayout>
     <RelativeLayout
        android:id="@+id/Rcu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/changeuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user" />

        <TextView
            android:id="@+id/changeusertext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/changeuser"
            android:layout_centerHorizontal="true"
            android:text="更换用户"
            android:textColor="#9c4242"
            android:textSize="16sp" />
    </RelativeLayout>
	
	</RelativeLayout>